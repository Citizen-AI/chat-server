      <meta charset="UTF-8">
      <link rel="preload" href="css/styles.css?n=23" as="style" />
      <link rel="stylesheet" href="css/styles.css?n=23" />
      <script src="https://cdn.rawgit.com/showdownjs/showdown/1.7.4/dist/showdown.min.js"></script>
      <script src="client.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.10/handlebars.min.js"></script>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="themes/{{theme_dir}}/styles.css" type="text/css" />
      {{#if theme_colour}}<meta name="theme-color" content="{{theme_colour}}" />{{/if}}
      <title>{{bot_page_title}}</title>
      {{> (meta) }}
    </head>
    <body>
      <div class="wrapper">
        <div id="sidebar">{{> (sidebar) }}</div>
        <div id="message_window">
            <div id="kebab_menu_icon"></div>
            <div id="bot-heading">
              <h1>
                <span class="name">{{bot_name}}</span>
                <span class="strapline">{{{bot_strapline}}}</span>
              </h1>
            </div>
            <div class="offline">
                Offline! Reload to reconnect.
            </div>
            <section>
                <div id="message_list">
                </div>
            </section>
            <div id="message_replies">
            </div>
            <footer>
                <form>
                    <input type="text" autocomplete="off" id="messenger_input" placeholder="Type here..." />
                    <button type="submit" onclick="Botkit.send(Botkit.input.value, event)">Send</button>
                </form>
            </footer>
        </div>
        </div>
    </body>
</html>